
name: Weirdhost Auto Renew

on:
  schedule:
    - cron: '0 18 * * *'  # æ¯å¤© UTC 18:00 (åŒ—äº¬æ—¶é—´æ¬¡æ—¥ 2:00) è¿è¡Œ
  workflow_dispatch:       # å…è®¸æ‰‹åŠ¨è§¦å‘

jobs:
  auto-renew:
    runs-on: ubuntu-latest
    
    # æˆäºˆå·¥ä½œæµé€‚å½“çš„æƒé™
    permissions:
      contents: write
      actions: read
      
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        # è·å–æ‰€æœ‰å†å²è®°å½•ï¼Œä»¥ä¾¿èƒ½å¤Ÿæ¨é€æ›´æ”¹
        fetch-depth: 0
        
    - name: Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install dependencies
      run: |
        pip install playwright
        playwright install chromium
        
    - name: Run auto renewal script
      env:
        REMEMBER_WEB_COOKIE: ${{ secrets.REMEMBER_WEB_COOKIE }}
        WEIRDHOST_EMAIL: ${{ secrets.WEIRDHOST_EMAIL }}
        WEIRDHOST_PASSWORD: ${{ secrets.WEIRDHOST_PASSWORD }}
        WEIRDHOST_SERVER_URLS: ${{ secrets.WEIRDHOST_SERVER_URLS }}
      run: python main.py
      
    - name: Commit and push if README changed
      run: |
        # é…ç½®gitç”¨æˆ·
        git config user.name "github-actions[bot]"
        git config user.email "github-actions[bot]@users.noreply.github.com"
        
        # æ£€æŸ¥README.mdæ˜¯å¦æœ‰æ›´æ”¹
        if git diff --exit-code --quiet README.md; then
          echo "README.mdæ²¡æœ‰å˜åŒ–ï¼Œæ— éœ€æäº¤"
        else
          echo "æ£€æµ‹åˆ°README.mdæœ‰æ›´æ”¹ï¼Œæ­£åœ¨æäº¤..."
          git add README.md
          git commit -m "ğŸ“ è‡ªåŠ¨æ›´æ–°è¿è¡ŒçŠ¶æ€: $(date +'%Y-%m-%d %H:%M:%S')"
          git push
        fi
        
    - name: Notify on failure
      if: failure()
      uses: actions/github-script@v6
      with:
        script: |
          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: 'âš ï¸ è‡ªåŠ¨ç»­æœŸè„šæœ¬æ‰§è¡Œå¤±è´¥ï¼Œè¯·æ£€æŸ¥æ—¥å¿—ã€‚'
          })
